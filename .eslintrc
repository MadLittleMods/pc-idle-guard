{
  "env": {
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "script"
  },
  "plugins": ["node"],
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "node/no-missing-require": "error",
    "node/no-unsupported-features": [
      "error",
      {
        "version": 10
      }
    ]
  }
}
